  <script>
    const $ = (id)=>document.getElementById(id);

    function weights(){
      const w1 = parseInt($("w1").value)||0;
      const w2 = parseInt($("w2").value)||0;
      const w3 = parseInt($("w3").value)||0;
      const s = Math.max(1, w1+w2+w3);
      const W1 = w1/s, W2 = w2/s, W3 = w3/s;
      $("wlabel").textContent = `w1=${W1.toFixed(2)} ‚Ä¢ w2=${W2.toFixed(2)} ‚Ä¢ w3=${W3.toFixed(2)}`;
      return {W1, W2, W3};
    }

    function clamp01(x){ return Math.max(0, Math.min(1, x)); }

    function calc(){
      const peth = parseFloat($("peth").value)||0;
      const etg  = parseFloat($("etg").value)||0;
      const cdt  = parseFloat($("cdt").value)||0;
      const {W1,W2,W3} = weights();

      const S_peth = clamp01(1 - (peth/200));
      const S_etg  = clamp01(1 - (etg/30));
      const S_cdt  = clamp01(1 - ((cdt-1.5)/1.5));
      const AI = 100 * (W1*S_peth + W2*S_etg + W3*S_cdt);

      $("score").textContent = Math.round(AI);
      $("bar").style.width = Math.max(0, Math.min(100, AI)) + "%";

      // traffic light decision
      let traffic = "VERDE";
      if (peth >= 200 || etg >= 30 || cdt >= 3.0) traffic = "VERMELHO";
      else if ( (peth >= 20 && peth < 200) || (etg >= 7 && etg < 30) || (cdt >= 2.6 && cdt < 3.0) ) traffic = "√ÇMBAR";

      const badge = $("badge");
      badge.className = "badge " + (traffic==="VERDE"?"green":traffic==="√ÇMBAR"?"amber":"red");
      badge.textContent = traffic;

      $("decision").value = `${traffic} (AI=${Math.round(AI)})`;
      return {AI, traffic, peth, etg, cdt, W1, W2, W3};
    }

    function resetForm(){
      $("peth").value = 0; $("etg").value = 0; $("cdt").value = 2.0;
      $("w1").value = 50; $("w2").value = 40; $("w3").value = 10; weights();
      calc();
      $("contract").value = ""; $("decision").value = "VERDE (AI=100)";
    }

    function todayISO(){
      const d = new Date();
      const z = (n)=>String(n).padStart(2,'0');
      return `${d.getFullYear()}-${z(d.getMonth()+1)}-${z(d.getDate())}`;
    }

    function generateContract(){
      const r = calc();
      const partyA = $("partyA").value||"[Seguradora/Entidade]";
      const partyB = $("partyB").value||"[Nome do Indiv√≠duo]";
      const jur = $("jur").value||"England & Wales";
      const start = $("start").value || todayISO();
      const freqPeth = $("freqPeth").value;
      const freqEtg = $("freqEtg").value;
      const discount = parseFloat($("discount").value)||0;
      const term = parseInt($("term").value)||12;
      const ref = $("ref").value||"[REF]";

      const custody = $("custody").checked;
      const consent = $("consent").checked;
      const treat = $("treat").checked;
      const retest = $("retest").checked;

      const cutoffs = {
        green: { peth:"<20 ng/mL", etg:"<7 pg/mg", cdt:"<2.6%" },
        amber: { peth:"20‚Äì200 ng/mL", etg:"7‚Äì30 pg/mg", cdt:"2.6‚Äì3.0%" },
        red:   { peth:"‚â•200 ng/mL", etg:"‚â•30 pg/mg", cdt:"‚â•3.0%" }
      };

      const terms = `
CONTRATO DE ABSTIN√äNCIA DE √ÅLCOOL (ETANOL)
Refer√™ncia: ${ref}

Entre ${partyA} ("Entidade") e ${partyB} ("Indiv√≠duo").

